{
  "name": "@toruslabs/fetch-node-details",
  "version": "2.4.0",
  "description": "Fetches the node details from torus nodelist smart contract",
  "main": "dist/fetchNodeDetails.cjs.js",
  "unpkg": "dist/fetchNodeDetails.umd.min.js",
  "jsdelivr": "dist/fetchNodeDetails.umd.min.js",
  "types": "types/nodeDetailManager.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "rimraf dist/ && cross-env NODE_ENV=development parallel-webpack --no-stats",
    "build": "rimraf dist/ && cross-env NODE_ENV=production parallel-webpack --no-stats",
    "prepack": "npm run build",
    "test": "mocha",
    "lint:js": "eslint --fix 'src/**/*.js'"
  },
  "peerDependencies": {
    "@babel/runtime": "7.x"
  },
  "dependencies": {
    "web3-eth-contract": "^1.3.4",
    "web3-utils": "^1.3.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.16",
    "@babel/register": "^7.12.13",
    "@babel/runtime-corejs3": "^7.12.13",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-webpack-plugin": "^2.5.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.0",
    "parallel-webpack": "^2.6.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run lint:js --",
      "prettier --write 'src/**/*.js'"
    ],
    "*.{json, md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/fetch-node-details.git"
  },
  "keywords": [
    "torus",
    "nodes",
    "torus-embed",
    "torus-website",
    "fetch-node-details",
    "toruslabs"
  ],
  "author": "Chaitanya Potti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/torusresearch/fetch-node-details/issues"
  },
  "homepage": "https://github.com/torusresearch/fetch-node-details#readme"
}
