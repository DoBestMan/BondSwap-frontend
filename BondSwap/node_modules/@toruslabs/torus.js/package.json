{
  "name": "@toruslabs/torus.js",
  "version": "2.3.0",
  "description": "Handle communication with torus nodes",
  "main": "dist/torusUtils.cjs.js",
  "unpkg": "dist/torusUtils.umd.min.js",
  "jsdelivr": "dist/torusUtils.umd.min.js",
  "types": "types/torus.d.ts",
  "scripts": {
